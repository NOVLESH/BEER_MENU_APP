<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_7"
    tools:context="com.ShareFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Your Content"
            android:fontFamily="@font/almendra"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="33dp"
            android:textColor="@color/blue"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="55dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="61dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:contentDescription="Instagram Share"
                android:src="@drawable/img_3" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="61dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:contentDescription="Facebook Share"
                android:src="@drawable/img_4" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="61dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:contentDescription="Twitter Share"
                android:src="@drawable/img_5" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="61dp"
                android:layout_height="60dp"
                android:src="@drawable/img_6"
                android:contentDescription="LinkedIn Share"
                android:layout_margin="10dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="456dp"
        android:text="Share" />

</FrameLayout>
